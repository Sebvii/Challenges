<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the progress bar (empty) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light gray background -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Foreground of the progress bar (filled part) -->
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_green"/> <!-- Dark green color for the progress -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
